@model Exam
@{
	Layout = "~/Views/Shared/_StudentLayout.cshtml";

	ViewData["Title"] = "ResultDetails";
	var questions = ViewBag.questions;
	var answers = ViewBag.answers;
	var options = ViewBag.options;
	var StudentAnswers = ViewBag.StudentAnswers;

}

<div>
<h1>Result Details</h1>
	<div class="row">
		<div class="col-md-12">
			<div class="card">
				<div class="card-header">
<h4 class="card-title">Result</h4>	
				</div>
				<div class="card-body">
					<div class="table-responsive">
						<table class="table">
							<thead class=" text-primary">
								<tr>
								<th>
									Question
								</th>
								<th>
									Answer
								</th>
								<th>
									Your Answer
								</th>
								<th>
									Options
								</th>
								</tr>
							</thead>
							<tbody>
								@for (int i = 0; i < questions.Count; i++)
								{
									<tr>
										<td>
											@questions[i]
										</td>
										<td>
											@answers[i]
										</td>
										<td>
											@if (StudentAnswers[i] == answers[i])
											{
												<span class="text-success">@StudentAnswers[i]</span>
											}else
											{
												<span class="text-danger">@StudentAnswers[i]</span>
											}

										</td>
										<td>
											@foreach (var option in options[i])
											{
												@if (option == answers[i])
												{
													<span class="text-success">@option</span>
												}
												else
												{
													<span class="text-danger">@option</span>
												}
											}
										</td>
									</tr>
								}
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>